<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable name="event" type="com.chyrkov.devoxxdemo.main.adapter.DevoxxAdapterItem"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vertical_guideline"
                app:layout_constraintGuide_begin="32dp"
                android:orientation="vertical"/>

        <FrameLayout
                android:orientation="vertical"
                android:id="@+id/label_layout"
                android:background="@{event.labelColor(context)}"
                android:layout_width="0dip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="0dip"
                android:layout_height="0dip">

        </FrameLayout>

        <TextView
                android:id="@+id/item_name_textview"
                tools:text="Troubleshooting &amp; Debugging Production Microservices in Kubernetes"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_default"
                android:textStyle="bold"
                android:text="@{event.name()}"
                android:gravity="center_vertical|start"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_height="wrap_content"
                android:layout_width="0dip"/>

        <TextView
                android:id="@+id/lecturers_textview"
                android:layout_width="0dip"
                android:textSize="@dimen/font_size_default"
                android:text="@{event.lecturers()}"
                android:textColor="@color/color_text_black"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_name_textview"
                tools:text="Ray Tsang, Baruch Sadogursky"/>

        <TextView
                android:id="@+id/location_textview"
                android:textColor="@color/color_text_black"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_size_default"
                android:text="@{`In ` + event.location() + ` from ` + event.timeBounds()}"
                tools:text="In Space X from 11:30AM - 12:30PM"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline"
                android:layout_marginBottom="@dimen/margin_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lecturers_textview"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_height="wrap_content"/>

        <TextView
                android:visibility="@{event.showLikes() ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="@id/location_textview"
                app:layout_constraintStart_toEndOf="@id/location_textview"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:text="@{event.likes()}"
                android:textSize="@dimen/font_size_default"
                tools:text="150"
                android:textColor="@color/color_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>